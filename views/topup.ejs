<div class="flex items-center justify-center my-10">
  <div class="bg-white p-8 rounded-lg shadow-md w-96">
    <a href="/main/<%= user.id%>">
      <button
        type="button"
        class="py-3 px-4 bg-green-400 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-gradient-to- shadow-lg hover:shadow-xl transition-transform duration-300 transform hover:scale-105"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          fill="currentColor"
          class="bi bi-arrow-left"
          viewBox="0 0 16 16"
        >
          <path
            fill-rule="evenodd"
            d="M15 8a.5.5 0 0 1-.5.5H3.707l3.147 3.146a.5.5 0 0 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 0 1 .708.708L3.707 7.5H14.5a.5.5 0 0 1 .5.5z"
          ></path>
        </svg>
        Back
      </button>
    </a>
    <h1 class="text-2xl font-bold text-center mb-6 mt-2">
      Top-Up Your Account
    </h1>
    <form id="topupForm" method="post" action="/main/<%= user.id %>/topup">
      <div class="mb-4">
        <label for="noHp" class="block text-sm font-medium text-gray-700"
          >Account Number:</label
        >
        <input
          type="text"
          id="noHp"
          name="noHp"
          required
          class="mt-1 block w-full border border-gray-300 rounded-md p-2"
          placeholder="Enter your account number"
          value="<%= user.noHp %>"
        />
      </div>
      <div class="mb-4">
        <label for="amount" class="block text-sm font-medium text-gray-700"
          >Amount to Top-Up:</label
        >
        <input
          type="number"
          id="amount"
          name="amount"
          required
          min="1"
          class="mt-1 block w-full border border-gray-300 rounded-md p-2"
          placeholder="Enter amount"
        />
      </div>
      <div class="mb-4">
        <label for="password" class="block text-sm font-medium text-gray-700">
          Password to Top-Up:
        </label>
        <div class="mt-1 relative">
          <input
            type="password"
            id="password"
            name="password"
            required
            min="1"
            class="block w-full border border-gray-300 rounded-md p-2 pr-14"
            placeholder="Enter password"
          />
          <button
            type="button"
            id="togglePassword"
            class="absolute inset-y-0 right-2 px-2 text-gray-600 focus:outline-none"
          >
            <span id="toggleText" class="p-1">Show</span>
          </button>
        </div>
      </div>

      <div class="mb-4">
        <label
          for="paymentMethod"
          class="block text-sm font-medium text-gray-700"
          >Payment Method:</label
        >
        <select
          id="paymentMethod"
          name="paymentMethod"
          required
          class="mt-1 block w-full border border-gray-300 rounded-md p-2"
        >
          <option value="">Select a method</option>
          <option value="creditCard">Credit Card</option>
          <option value="debitCard">Debit Card</option>
          <option value="paypal">PayPal</option>
        </select>
      </div>
      <% if (typeof message !== 'undefined' && message) { %>
      <div
        class="bg-green-500 text-sm text-white rounded-lg p-4 mt-4"
        role="alert"
      >
        <%= message %>
      </div>
      <% } %> <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
      <div
        class="bg-red-500 text-sm text-white rounded-lg p-4 mt-4"
        role="alert"
      >
        <%= errorMessage %>
      </div>
      <% } %>
      <button
        type="submit"
        class="w-full bg-blue-500 text-white font-bold py-2 rounded-md hover:bg-blue-600 mt-2"
      >
        Top-Up
      </button>
    </form>
    <div id="message" class="mt-4 text-center text-red-500"></div>
  </div>
</div>
