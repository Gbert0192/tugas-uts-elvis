<body>
  <div class="container mx-auto p-4 max-w-lg items-center justify-center">
    <div class="bg-white shadow-sm rounded-lg p-4 sm:p-7">
      <div>
        <h1 class="block text-2xl font-bold text-gray-800">
          Register Your Account
        </h1>
        <p class="mt-1 text-sm text-gray-600">
          Register your account with phone number and email
        </p>
        <form class="mt-7" method="post" action="/register" id="myForm">
          <!-- number phone input -->
          <div class="flex flex-col">
            <label for="noHp" class="text-gray-800">Nomor Telepon</label>
            <div class="flex items-center border border-gray-200 rounded-md h-12">
              <span class="p-4 text-lg">+62</span>
              <input
                type="number"
                id="noHp"
                class="block w-full text-lg disabled:pointer-events-none bg-white"
                required
                placeholder="82162625555"
                name="noHp"
                aria-label="Nomor Telepon"
              />
            </div>
          </div>

          <!-- email input -->
          <div class="mt-4 flex flex-col">
            <span class="text-gray-800 text-xl">Email</span>
            <div class="flex items-center border border-gray-200 rounded-md h-12">
              <input
                type="email"
                id="email"
                class="block w-full text-lg disabled:pointer-events-none pl-3"
                required
                placeholder="Arwing@nteng.com"
                name="email"
              />
            </div>
          </div>

          <!-- name input -->
          <div class="mt-4">
            <span class="text-gray-800 text-xl">Full Name</span>
            <div class="flex items-center border border-gray-200 rounded-md h-12">
              <input
                type="text"
                id="fullName"
                class="block w-full text-lg disabled:pointer-events-none pl-3"
                required
                placeholder="Arwin Simatupang"
                name="name"
              />
            </div>
          </div>

          <!-- sex input -->
          <div class="mt-4">
            <label for="sex" class="text-gray-800 text-xl">Select Your Sex</label>
            <select
              id="sex"
              name="sex"
              class="flex items-center border border-gray-200 rounded-md h-12 w-full text-lg disabled:pointer-events-none pl-3 placeholder-gray-500"
              required >
              <option value="select" disabled selected>
                Please select your sex
              </option>
              <option value="Male" id="male">Male</option>
              <option value="Female" id="female">Female</option>
              <option value="NON" id="non">Don't want to mention</option>
            </select>
          </div>

          <!-- password input -->
          <div class="mt-4">
            <span class="text-gray-800 text-xl">Password</span>
            <div class="flex items-center border border-gray-200 rounded-md h-12">
              <input
                type="password"
                id="password"
                class="block w-full text-lg disabled:pointer-events-none pl-3 placeholder-gray-500"
                required
                placeholder="Masukkan Password Anda"
                name="password"
              />
              <button
                type="button"
                id="togglePassword"
                class="flex items-center justify-center w-12 h-full text-gray-600 focus:outline-none"
              >
                <span id="toggleText" class="p-4">Show</span>
              </button>
            </div>

            <!-- Flash message untuk pesan sukses atau error -->
            <% if (typeof message !== 'undefined' && message) { %>
              <div class="bg-green-500 text-sm text-white rounded-lg p-4 mt-4" role="alert">
                <%= message %>
              </div>
            <% } %>

            <% if (Array.isArray(errorMessages) && errorMessages.length > 0) { %>
              <div class="bg-red-500 text-sm text-white rounded-lg p-4 mt-4" role="alert">
                <% errorMessages.forEach(function(message) { %>
                  <p><%= message %></p>
                <% }); %>
              </div>
            <% } %>


          </div>

          <button
            type="submit"
            class="mt-7 w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-3xl bg-green-500 text-white hover:bg-green-600 focus:outline-none focus:bg-green-600 h-12"
          >
            Continue
          </button>
        </form>
      </div>

      <div class="mt-5">
        <div class="grid gap-y-4">
          <div class="py-3 flex items-center text-xs text-gray-400 before:flex-1 before:border-t before:border-gray-200 before:me-6 after:flex-1 after:border-t after:border-gray-200 after:ms-6">
            or
          </div>
          <!-- Other buttons -->
        </div>
      </div>
      <div class="text-center mt-7">
        <p class="text-xs text-gray-500">
          2024 Grab Inc.
          <a class="text-blue-500 hover:underline focus:outline-none focus:underline" href="">
            Terms and Conditions.
          </a><br />
          Invisible reCAPTCHA by Google
          <a class="text-blue-500 hover:underline focus:outline-none focus:underline" href="">
            Privacy Policy
          </a> and
          <a class="text-blue-500 hover:underline focus:outline-none focus:underline" href="">
            Terms of use
          </a>
        </p>
      </div>
    </div>
  </div>
</body>
